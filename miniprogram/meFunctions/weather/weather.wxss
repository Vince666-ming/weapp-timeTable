.container {
  font-family: 微软雅黑, 宋体;
  font-size: 16px;
  background-size: cover;
  height: 100%;
  width: 100%;
  color: white;
  text-align: center;
}

.title {
  font-size: 20px;
  font-weight: bold;
}

.today {
  height: 50%;
  padding: 20px;
  background-color: #7ecef4;
  box-shadow: 10px 10px 20px #7ecef4;
  line-height: 80rpx;
}

.hr {
  width: 100%;
  height: 50rpx;
  background-color: rgba(0, 0, 0, 0.1);
}

.week {
  height: 50%;
  padding: 20px;
  background-color: #7ecef4;
  box-shadow: 10px 10px 20px #7ecef4;
  line-height: 110rpx;
}

