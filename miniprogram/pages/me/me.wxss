/* pages/me/me.wxss */

.content {
  font-family: "Microsoft YaHei";
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  overflow: hidden;
}

.userinfo-nickname {
  color: #aaa;
}

.container {
  height: 100%;
  display: flex;
  font-family: "Microsoft YaHei";
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 100rpx;
  box-sizing: border-box;
}

.bg {
  width: 100%;
  height: 150px;
  background-color: #d53e37;
}

.hr {
  width: 100%;
  height: 15px;
  background-color: #f4f5f6;
}

.item {
  display: flex;
  width: 100%;
  height: 45px;
  flex-direction: row;
  align-items: center;
}

.order {
  /* padding-top:15px;
 padding-left:15px;
 padding-bottom: 15px; */
  position: absolute;
  left: 15px;
  font-size: 15px;
}

.detail {
  font-size: 15px;
  position: absolute;
  right: 10px;
  color: #888;
}

.xian {
  border: 1px solid #ccc;
  opacity: 0.2;
}
